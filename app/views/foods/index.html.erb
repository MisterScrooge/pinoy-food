<h1>üç° Pinoy Foods Rating</h1>

<table>
    <thead>
        <tr>
            <th>Food</th>
            <th>Rating</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @foods.each do |food| %>
            <tr>
                <td class="item"><%= food.food.upcase %></td>
                <td class="item"><%= food.rating %></td>
                <td class="item-method"><%= link_to "Show", food %></td>
                <td class="item-method"><%= link_to "Edit", edit_food_path(food) %></td>
                <td class="item-method"><%= link_to "Delete", food, method: :delete, data: { confirm: "You sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<div><button><%= link_to "New Entry", new_food_path %></button></div>







